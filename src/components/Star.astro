---
import { Icon } from "astro-icon/components";

export interface StarProps {
  size: number;
  duration?: number;
  opacity?: number;
}

const { size, duration = 10, opacity = 100 } = Astro.props as StarProps;
---

<Icon class="animate-when-visible absolute z-0 animate-spin text-emerald-300" style={`width: ${size}rem; height: ${size}rem; animation-duration: ${duration}s; opacity: ${opacity}%;`} name="star" />
