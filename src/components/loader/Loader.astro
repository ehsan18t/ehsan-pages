---
import "./loader.css";
---

<div id="hero-loader" class="loader-container">
  <div class="loader-content">
    <!-- Logo with E and K -->
    <div class="logo-container">
      <svg width="150" height="150" viewBox="0 0 150 150" class="logo-svg">
        <!-- Background circle -->
        <circle cx="75" cy="75" r="70" class="logo-circle" fill="none" stroke="#FFD700" stroke-width="2"></circle>

        <!-- E Letter -->
        <path class="letter letter-e" d="M55,50 L85,50 L85,65 L70,65 L70,75 L80,75 L80,90 L70,90 L70,100 L85,100 L85,115 L55,115 Z" fill="none" stroke="#FFD700" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"></path>

        <!-- K Letter -->
        <path class="letter letter-k" d="M90,50 L105,50 L105,75 L120,50 L137,50 L115,80 L137,115 L120,115 L105,90 L105,115 L90,115 Z" fill="none" stroke="#FFD700" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"></path>
      </svg>
    </div>

    <!-- Name -->
    <div class="name-container">
      <div class="name">
        <span class="name-char">E</span>
        <span class="name-char">H</span>
        <span class="name-char">S</span>
        <span class="name-char">A</span>
        <span class="name-char">N</span>
        <span class="name-char"> </span>
        <span class="name-char"> </span>
        <span class="name-char">K</span>
        <span class="name-char">H</span>
        <span class="name-char">A</span>
        <span class="name-char">N</span>
      </div>
    </div>
  </div>

  <!-- Background particles -->
  <div class="particles">
    <div class="particle p1"></div>
    <div class="particle p2"></div>
    <div class="particle p3"></div>
    <div class="particle p4"></div>
    <div class="particle p5"></div>
    <div class="particle p6"></div>
  </div>
</div>
