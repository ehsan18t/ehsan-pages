    color: white;
    box-shadow: 0 2px 5px rgba(12, 75, 51, 0.3);
  }

  .tech-pill[data-tech="php"] {
    background: linear-gradient(135deg, #777bb4, #5a5d99); /* Darker end color */
    color: white;
    box-shadow: 0 2px 5px rgba(119, 123, 180, 0.3);
  }

