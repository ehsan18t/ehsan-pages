  .tech-pill[data-tech="react"] {
    background-color: #61dafb;
    color: #111;
    border-color: color-mix(in oklch, #61dafb, black 20%);
  }
  .tech-pill[data-tech="nextjs"] {
    background-color: #000000;
    color: white;
    border-color: #444;
  } /* Special case for black */
  .tech-pill[data-tech="svelte"] {
