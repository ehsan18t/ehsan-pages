---
interface Props {
  name: string;
  [key: string]: any;
}
const { name, class: className, ...rest } = Astro.props;
---

<span class:list={["tech-pill", className]} {...rest}>
  {name}
</span>

<style>
  /* Base Tech Pill Style */
  .tech-pill {
    display: inline-block;
    font-size: 0.75rem; /* text-xs */
    font-weight: 500; /* font-medium */
    padding: 0.125rem 0.625rem; /* px-2.5 py-0.5 */
    border-radius: 9999px; /* rounded-full */
    white-space: nowrap;
    /* Add a default border */
    border: 1px solid transparent;
    /* Default fallback colors */
    background-color: #475569; /* slate-600 */
    color: #f1f5f9; /* slate-100 */
    border-color: color-mix(in oklch, #475569, black 20%); /* Darker fallback border */
  }

  /* --- Tech Specific Colors (Refined) --- */
  /* Using color-mix(in oklch, [BG_COLOR], black 20%) for a consistent darker border */

  /* Frontend */
  .tech-pill[data-tech="html"] {
    background-color: #e44d26;
    color: white;
    border-color: color-mix(in oklch, #e44d26, black 20%);
  }
  .tech-pill[data-tech="css"] {
    background-color: #1572b6;
    color: white;
    border-color: color-mix(in oklch, #1572b6, black 20%);
  }
