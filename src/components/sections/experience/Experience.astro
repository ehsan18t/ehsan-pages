---
import SectionTitle from "@/components/SectionTitle.astro";
import data from "@/data";
import ExperienceGraph from "./ExperienceGraph";
---

<section id="experience" class="scroll-mt-20 py-20 md:py-28">
  <div class="container mx-auto px-4">
    <SectionTitle p1="My" p2="Journey" subtitle="A visual timeline of my professional path. Hover on commits to explore each role." />

    <ExperienceGraph experiences={data.experiences} client:visible />
  </div>
</section>
