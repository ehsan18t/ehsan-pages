---
import info from "@/data";
import { Icon } from "astro-icon/components";
import Button from "./button/Button.astro";
const iconClass = "p-1 hover:ring-4 hover:text-white text-white md:bg-transparent rounded-full ring-2 transition ease-in-out duration-200";
const { socials } = info;

type SocialKeys = keyof typeof socials;

const size = 40;
const colors: Record<SocialKeys, string> = {
  gmail: "md:text-rose-400 ring-rose-400 hover:bg-rose-600 bg-rose-600",
  telegram: "md:text-sky-400 ring-sky-400 hover:bg-sky-600 bg-sky-600",
  discord: "md:text-indigo-400 ring-indigo-400 hover:bg-indigo-600 bg-indigo-600",
  linkedin: "md:text-blue-400 ring-blue-400 hover:bg-blue-600 bg-blue-600",
  github: "md:text-gray-400 ring-gray-400 hover:bg-gray-700 bg-gray-700",
};
---

<div class="appear py-10 flex items-center justify-center md:justify-start">
  <div class="w-min flex flex-col gap-5">
    <Button id="btn-cv-dnld" link={info.resume} class="w-full font-bold bg-accent-title"> View CV </Button>
    <div class="flex gap-3">
      {
        Object.keys(socials).map((key) => {
          const url: string = socials[key as SocialKeys];
          return (
            <a target="_blank" href={url}>
              <Icon name={`socials/${key}`} size={size} title={key.toLocaleUpperCase()} class={`${iconClass} ${colors[key as SocialKeys]}`} />
            </a>
          );
        })
      }
    </div>
  </div>
</div>
