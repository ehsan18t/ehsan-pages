---
import Hero from "@/components/Hero.astro";
import MainLayout from "@/layouts/MainLayout.astro";
import InfiniteLoader from '../components/InfiniteLoader.astro';
---

<MainLayout>
  <InfiniteLoader client:load />

  <main id="main-content" style="opacity:0; pointer-events: none;">
    <Hero />
  </main> 

  <script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
      const loader = document.getElementById('hero-loader');
      const main = document.getElementById('main-content');
      
      // Show loader for exactly 2 seconds
      setTimeout(() => {
        // 1. First hide the loader
        if (loader) {
          loader.style.opacity = '0';
          loader.style.transition = 'opacity 0.4s ease';
          
          // 2. After transition completes, remove it from DOM
          setTimeout(() => {
            if (loader && document.body.contains(loader)) {
              loader.remove();
            }
          }, 400);
        }
        
        // 3. Show main content immediately after loader starts fading
        main.style.opacity = '1';
        main.style.pointerEvents = 'auto';
        main.style.transition = 'opacity 0.6s ease';
        
      }, 2000); // Exactly 2 seconds
    });
  </script>
</MainLayout>